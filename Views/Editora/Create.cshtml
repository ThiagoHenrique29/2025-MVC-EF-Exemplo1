@model EditoraEditViewModel
@{
    ViewBag.Title = "Gerenciamento de editoras";
    Layout = "_Layout";
}
@section Scripts
{
    <script src='@Url.Content("~/js/cepautofill.js")' asp-append-version="true"></script>
}

<h1 class="display-6 my-5">Adicionando editora</h1>


<form asp-action="Create">
    <div class="form-group mb-4">
        <label for="EditoraNome" class="form-label">Nome da Editora</label>
        <input asp-for="EditoraNome" id="EditoraNome" class="form-control" />
        <span asp-validation-for="EditoraNome" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label for="EditoraCEP" class="form-label">CEP</label>
        <input asp-for="EditoraCEP" id="EditoraCEP" class="form-control" />
        <span asp-validation-for="EditoraCEP" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label for="EditoraLogradouro" class="form-label">Logradouro</label>
        <input asp-for="EditoraLogradouro" id="EditoraLogradouro" class="form-control" />
        <span asp-validation-for="EditoraLogradouro" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label for="EditoraNumero" class="form-label">Número</label>
        <input asp-for="EditoraNumero" id="EditoraNumero" class="form-control" />
        <span asp-validation-for="EditoraNumero" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label for="EditoraComplemento" class="form-label">Complemento</label>
        <input asp-for="EditoraComplemento" id="EditoraComplemento" class="form-control" />
        <span asp-validation-for="EditoraComplemento" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label for="EditoraCidade" class="form-label">Cidade</label>
        <input asp-for="EditoraCidade" id="EditoraCidade" class="form-control" />
        <span asp-validation-for="EditoraCidade" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label for="EditoraUF" class="form-label">Estado</label>
        <input asp-for="EditoraUF" id="EditoraUF" class="form-control" />
        <span asp-validation-for="EditoraUF" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label for="EditoraPais" class="form-label">País</label>
        <input asp-for="EditoraPais" id="EditoraPais" class="form-control" />
        <span asp-validation-for="EditoraPais" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label for="EditoraTelefone" class="form-label">Telefone</label>
        <input asp-for="EditoraTelefone" id="EditoraTelefone" class="form-control" />
        <span asp-validation-for="EditoraTelefone" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary" role="button">Retornar ao índice</a>
</form>
